{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["./src", "./tests"]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
