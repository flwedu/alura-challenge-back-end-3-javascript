{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "Node",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@useCases": ["src/application/useCases/*"],
      "@domain": ["src/application/domain/*"],
      "@repositories": ["src/output/repositories/*"]
    },
    "rootDirs": ["./src", "./tests"]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
