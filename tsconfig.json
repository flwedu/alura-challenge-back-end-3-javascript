{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "Node",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDirs": ["./src", "./test"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
